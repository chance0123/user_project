<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp">
    <ImageView
        android:id="@+id/game_grid_view_item_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/push"/>
    <TextView
        android:id="@+id/game_grid_view_item_one_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_hear_text"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/game_grid_view_item_iv"/>
    <TextView
        android:id="@+id/game_grid_view_item_two_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_hear_text"
        android:textColor="@color/gray"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/game_grid_view_item_iv"/>
    <TextView
        android:id="@+id/game_grid_view_item_three_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_hear_text"
        android:textColor="@color/red"
        android:layout_alignTop="@+id/game_grid_view_item_four_txt"
        android:layout_toRightOf="@+id/game_grid_view_item_four_txt"
        android:layout_toEndOf="@+id/game_grid_view_item_four_txt"/>
    <TextView
        android:id="@+id/game_grid_view_item_four_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人气："
        android:textColor="@color/gray"
        android:layout_alignBottom="@id/game_grid_view_item_iv"
        android:layout_toRightOf="@id/game_grid_view_item_iv"/>
    <Button
        android:id="@+id/game_grid_view_item_btn"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="下载"
        android:textColor="#40E0D0"
        android:background="@drawable/activity_botton_two"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/game_grid_view_item_three_txt"
        />
    </RelativeLayout>
</RelativeLayout>