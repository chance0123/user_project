<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">
    <EditText
        android:id="@+id/game_header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/search_all"
        android:text="请输入要搜索的内容"
        android:paddingLeft="20dp"
        android:layout_toLeftOf="@+id/head_download_txt"
        />
    <ImageView
        android:id="@+id/head_download_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/download_dark_ic"
        android:layout_alignParentRight="true"
        android:padding="5dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/game_header_text">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/gift_header_1_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/push"
                />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/gift_header_2_image"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/push"/>
                    <ImageView
                        android:id="@+id/gift_header_3_image"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/push"/>
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/linearLayout_one"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.android.a1000phone.chengling.twofoxganme.CustomListView
            android:id="@+id/gift_guesswant_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#969696" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="豪华独家礼包"
            android:drawableRight="@drawable/ic_mark_privilege"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#969696" />
        <com.android.a1000phone.chengling.twofoxganme.CustomListView
            android:id="@+id/gift_big_gift_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/gift_hot_header_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#969696" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门推荐"
            android:drawableRight="@drawable/ic_mark_excellent"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#969696" />
        <com.android.a1000phone.chengling.twofoxganme.CustomListView
            android:id="@+id/gift_hot_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/gift_new_header_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#969696" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新礼包"
            android:drawableRight="@drawable/ic_mark_new"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="20sp"/>

        <com.android.a1000phone.chengling.twofoxganme.CustomListView
            android:id="@+id/gift_new_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
