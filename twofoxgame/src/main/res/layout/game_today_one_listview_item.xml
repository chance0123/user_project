<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
    <ImageView
        android:id="@+id/game_today_item_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/push"
        />
    <TextView
        android:id="@+id/game_today_item_one_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_over_time"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_toRightOf="@id/game_today_item_iv"/>
    <TextView
        android:id="@+id/game_todang_item_two_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_hear_text"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/game_today_item_iv"/>

    <TextView
        android:id="@+id/game_today_item_three_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_hear_text"
        android:textColor="@color/red"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/game_today_pass_item_txt"
        android:layout_toEndOf="@id/game_today_pass_item_txt"/>
    <TextView
        android:id="@id/game_today_pass_item_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_hear_text"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/game_todang_item_two_txt"
        android:layout_toEndOf="@id/game_todang_item_two_txt"/>
    <TextView
        android:id="@+id/game_today_four_item_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_hear_text"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="10dp"
        android:layout_alignBottom="@id/game_today_item_iv"
        android:layout_toRightOf="@id/game_today_item_iv"
        android:layout_toLeftOf="@+id/game_today_five_item_txt"/>
    <Button
        android:id="@id/game_today_five_item_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下载"
        android:textColor="@color/gray"
        android:drawableTop="@drawable/ic_home_down"
        android:background="#00000000"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>